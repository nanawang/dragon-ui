{
  "compilerOptions": {
    "strictNullChecks": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "jsx": "react",
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "types": [
      "classnames",
      "react",
      "react-dom"
    ]
  },
  "include": [
    "components/*.tsx",
    "components/**/*.tsx",
    "components/utils/types.ts"
  ],
  "exclude": [
    "node_modules",
    "lib",
    "es"
  ],
  "compileOnSave": false
}
